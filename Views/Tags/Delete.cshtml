@model Blog_MVC.Models.Tag

@{
    ViewData["Title"] = "Delete";
}

<h3 class="ms-5 mt-5">Are you sure you want to delete this Tag?</h3>
<div class="row ms-5">
    <h4>Tag Name: @Model.Name</h4>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group row">
            <div class="col-3 text-start"><input type="submit" value="Delete" class="btn btn-danger rounded-pill" /></div>
            <div class="col-3 text-start">
                <a asp-action="Index" class="btn btn-primary rounded-pill">Never mind</a>
            </div>
        </div>
    </form>
</div>
