@model Blog_MVC.Models.Tag

@{
    ViewData["Title"] = "Create";
}

<div class="post-single-wrapper axil-section-gap m-5 p-5">
    <div class="container mt-5 col-md-6">
        <form asp-action="Create">
            <h4 class="lightText">Add a New Tag</h4>
            <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                <div class="form-group row justify-content-between">
                    <div class="col-3">
                        <input type="submit" value="Create" class="btn btn-primary rounded-pill" />
                    </div>
                    <div class="col-3 text-end">
                        <a asp-action="Index" class="btn btn-primary rounded-pill">Back to Tags</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
